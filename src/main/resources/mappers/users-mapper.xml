<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="Users">
  
  	<insert id="insert">
  		insert into users values(users_seq.nextval, #{id}, #{pw}, #{name}, #{phone}, #{email})
  	</insert>
  

	<select id="loginCheck" parameterType="com.kedu.study.users.UsersDTO" resultType="String">
		SELECT name FROM users WHERE id = #{id} AND pw = #{pw}
	</select>
	
	<select id="selectAllByName" parameterType="com.kedu.study.users.UsersDTO" resultType="com.kedu.study.users.UsersDTO">
		select id, pw, name, phone, email from users where name = #{name}
	</select>
  
  	<delete id="deleteByname">
  		delete from users where name = #{name}
  	</delete>
  
  </mapper>